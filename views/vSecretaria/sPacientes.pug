extends ../layouts/layout

block content
    h1 Gestión de Médicos
    form(action="/admin/medicos" method="POST")
        div
            label(for="nombre") Nombre:
            input(type="text" name="nombre" required)
        div
            label(for="apellido") Apellido:
            input(type="text" name="apellido" required)
        div
            label(for="dni") DNI:
            input(type="text" name="dni" required)    
        div
            label(for="especialidad") Especialidad:
            input(type="text" name="especialidad" required)
        div
            label(for="email") Email:
            input(type="email" name="email")
        div
            label(for="telefono") Teléfono:
            input(type="text" name="telefono")
        div
            label(for="matricula") Matrícula:
            input(type="text" name="matricula")

        // Fecha desde/hasta
        div
            label(for="fechaInicio") Fecha de inicio:
            input(type="date" name="fechaInicio" required)
        div
            label(for="fechaFin") Fecha de fin:
            input(type="date" name="fechaFin" required)

        // Selección de días de la semana
        div
            label Días de trabajo:
            div
                input(type="checkbox" name="dias" value="lunes")
                label(for="lunes") Lunes
            div
                input(type="checkbox" name="dias" value="martes")
                label(for="martes") Martes
            div
                input(type="checkbox" name="dias" value="miercoles")
                label(for="miercoles") Miércoles
            div
                input(type="checkbox" name="dias" value="jueves")
                label(for="jueves") Jueves
            div
                input(type="checkbox" name="dias" value="viernes")
                label(for="viernes") Viernes
            div
                input(type="checkbox" name="dias" value="sabado")
                label(for="sabado") Sábado

        // Selector de horarios
        div
            label Horario de trabajo:
            div
                label(for="horaInicio") Desde:
                input(type="time" name="horaInicio" required)
            div
                label(for="horaFin") Hasta:
                input(type="time" name="horaFin" required)

        div
            button(type="submit") Agregar Médico

        if newMedico
            br
            br
            p= "Médico agregado exitosamente"
